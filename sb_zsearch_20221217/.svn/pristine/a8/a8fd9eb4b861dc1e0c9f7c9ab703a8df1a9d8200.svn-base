package com.vo;

import java.util.Comparator;
import java.util.List;

import org.springframework.boot.SpringApplication;
import org.springframework.boot.autoconfigure.SpringBootApplication;

import com.vo.fenci.Fenci;

/**
 * 写一个分词、搜索工具
 *
 * @author zhangzhen
 * @date 2022年12月17日
 *
 */
@SpringBootApplication
public class SbZsearch20221217Application {

	public static void main(final String[] args) {
//		SpringApplication.run(SbZsearch20221217Application.class, args);

		final List<String> fenci = Fenci.fenci(
				"失败是什么？没有什么，只是更走近成功一步；成功是什么？就是走过了所有通向失败的路，只剩下一条路，那就是成功的路。");

		for (final String string : fenci) {
			System.out.println(string);
		}

		fenci.sort(Comparator.comparing(String::length));
		final String a = Fenci.toPgsqlArray(fenci);
		System.out.println("------------a-------------");
		System.out.println(a);

	}

}
